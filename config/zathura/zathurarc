# Zathura configuration file
# See man `man zathurarc'

set font "monaco normal 10"
set default-bg "#30303a"
set default-fg "#d6d6d6"
set statusbar-bg "#140f06"
set statusbar-fg "#f4e8ba"

#set adjust-open	width
set inputbar-fg "#aaaaaa"
set completion-highlight-bg "#30303a"
set completion-highlight-fg "#aaaaaa"

# Open document in fit-width mode by default
set adjust-open "best-fit"

# zoom and scroll step size
set zoom-step 20
set scroll-step 80

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01

# copy selection to system clipboard
set selection-clipboard clipboard

# enable incremental search
set incremental-search true

# zoom
map <C-i> zoom in
map <C-o> zoom out

set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

map <F1> set "pages-per-row 1"
map <F2> set "pages-per-row 2"
map <F3> adjust_window best-fit
map <F4> adjust_window width
